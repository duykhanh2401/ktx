extends base

block head 
    title Thông tin phòng #{`${room.roomNumber} - ${room.building.name}`}


block content

    .container-title=`Thông tin phòng ${room.roomNumber} - ${room.building.name}`
    .container-navigation

        a.btn.btn-primary.btn-back(href='/admin/room' type='button') Quay lại
        button.btn.btn-primary.btn-new(data-toggle='modal' data-target='#addNewModal' type='button') Thêm sinh viên
   
    .warp-container#room-child(data-id=`${room.id}`)
        .generalInformation
            .header Thông tin chung

            .body 
                .item Số phòng *
                    .value=`${room.roomNumber}`
                .item Tên toà nhà *
                    .value=`${room.building.name}`
                .item Giá *
                    .value=`${room.building.unitPrice}`
                .item Số sinh viên *
                    .value.value-presentStudent        
                .item Số sinh viên tối đa *
                    .value=`${room.maxStudent}` 
        .table
            .table-header
                 .table-header-title
            .table-body
                table#table
            
                    
    #addNewModal.modal.fixed-left.fade(tabindex='-1' role='dialog')
        .modal-dialog.modal-dialog-aside.modal-dialog-scrollable(role='document')
            .modal-content
                .modal-header
                    h5.modal-title Thêm sinh viên
                    button.close(type='button' data-dismiss='modal' aria-label='Close')
                    span(aria-hidden='true') &times;
                .modal-body
                    label(for='') Sinh viên
                    select#studentSelect.custom-select.custom-select-lg.mb-3(data-placeholder='Chọn tên phân loại')

                .modal-footer
                    button.btn.btn-primary.btn-add-new(type='button') Thêm
                    button.btn.btn-secondary(type='button' data-dismiss='modal') &Dstrok;&oacute;ng




    #removeModal.modal.modal-center.fade(tabindex='-1' role='dialog' aria-labelledby='exampleModalLabel' aria-hidden='true')
        .modal-dialog(role='document')
            .modal-content
                .modal-header
                    h5#exampleModalLabel.modal-title Bạn có muốn xoá sinh viên này ra khỏi phòng
                    button.close(type='button' data-dismiss='modal' aria-label='Close')
                    span(aria-hidden='true') &times;

                .modal-footer
                    button.btn.btn-primary.btn-remove(type='button') Xoá
                    button.btn.btn-secondary(type='button' data-dismiss='modal') Close
